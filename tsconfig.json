{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "lib": ["ES2022"]
  },
  "include": ["src/**/*"]
  ,
  "exclude": ["test", "node_modules", "dist"]
}
